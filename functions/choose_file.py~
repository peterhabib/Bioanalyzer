def chooseout(title,text):
    root = tk.Tk()
    root.title(title)
    frame = tk.Frame(root)
    frame.pack()
    def write_slogan():
        filename = filedialog.asksaveasfilename(initialdir="/", title="Select file",
                                                     filetypes=(("jpeg files", "*.jpg"), ("all files", "*.*")))
        root.destroy()
    def Exit():
        root.destroy()


    label = tk.Label(root, text=text,font=('Arial', 15, 'bold'))
    label.pack()
    button = tk.Button(frame,
                       text="Cancel",bd = 10,bg ="black", font=('Arial', 15, 'bold'),
                       fg="red",
                       command=Exit)
    button.pack(side=tk.LEFT)
    slogan = tk.Button(frame,
                       text="Choose",bd = 10,bg ="black", font=('Arial', 15, 'bold'),fg="white",
                       command=write_slogan)
    slogan.pack(side=tk.LEFT)

    return filename

    root.mainloop()

    











